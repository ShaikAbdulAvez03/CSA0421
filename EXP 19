#include <stdio.h>
#include <string.h>

int main() {
    int n;
    char files[20][30];

    printf("Enter number of files: ");
    scanf("%d", &n);

    for(int i = 0; i < n; i++) {
        printf("Enter file name %d: ", i + 1);
        scanf("%s", files[i]);
    }

    printf("\nFiles in Single Level Directory:\n");
    for(int i = 0; i < n; i++)
        printf("%s\n", files[i]);

    return 0;
}
