/* my_grep.c */
#include <stdio.h>
#include <string.h>

int main(int argc, char *argv[]) {
    if(argc!=3) { fprintf(stderr,"Usage: %s pattern filename\n", argv[0]); return 1; }
    char *pattern = argv[1];
    FILE *fp = fopen(argv[2],"r");
    if(!fp){ perror("fopen"); return 1; }
    char line[1024];
    int lineno=0;
    while(fgets(line,sizeof(line),fp)) {
        lineno++;
        if(strstr(line, pattern))
            printf("%d:%s", lineno, line);
    }
    fclose(fp);
    return 0;
}
