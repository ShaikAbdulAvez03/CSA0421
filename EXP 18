#include <stdio.h>
#include <stdlib.h>

int main() {
    int n, head, disk_size, seek = 0;
    int req[50], temp;
    int direction;

    printf("Enter number of requests: ");
    scanf("%d", &n);

    printf("Enter request sequence:\n");
    for(int i = 0; i < n; i++)
        scanf("%d", &req[i]);

    printf("Enter initial head position: ");
    scanf("%d", &head);

    printf("Enter disk size: ");
    scanf("%d", &disk_size);

    printf("Enter direction (0 = left, 1 = right): ");
    scanf("%d", &direction);

    // Sort requests
    for(int i = 0; i < n - 1; i++) {
        for(int j = i + 1; j < n; j++) {
            if(req[i] > req[j]) {
                temp = req[i];
                req[i] = req[j];
                req[j] = temp;
            }
        }
    }

    int pos;
    for(pos = 0; pos < n; pos++)
        if(req[pos] > head)
            break;

    if(direction == 1) {
        for(int i = pos; i < n; i++) {
            seek += abs(req[i] - head);
            head = req[i];
        }
        seek += abs((disk_size - 1) - head);
        head = disk_size - 1;

        for(int i = pos - 1; i >= 0; i--) {
            seek += abs(req[i] - head);
            head = req[i];
        }
    } else {
        for(int i = pos - 1; i >= 0; i--) {
            seek += abs(req[i] - head);
            head = req[i];
        }
        seek += abs(head - 0);
        head = 0;

        for(int i = pos; i < n; i++) {
            seek += abs(req[i] - head);
            head = req[i];
        }
    }

    printf("\nTotal Seek Time = %d\n", seek);
    return 0;
}
