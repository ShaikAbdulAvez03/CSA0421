#include <stdio.h>
#include <string.h>

int main(int argc, char *argv[]) {
    FILE *fp;
    char line[200];

    if (argc != 3) {
        printf("Usage: ./grep <word> <file>\n");
        return 1;
    }

    fp = fopen(argv[2], "r");
    if (fp == NULL) {
        perror("File error");
        return 1;
    }

    while (fgets(line, sizeof(line), fp)) {
        if (strstr(line, argv[1]))
            printf("%s", line);
    }

    fclose(fp);
    return 0;
}
