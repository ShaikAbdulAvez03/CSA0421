#include <stdio.h>
#include <sys/stat.h>

int main() {
    struct stat f;
    stat("sample.txt", &f);

    printf("File Permissions:\n");
    printf("User: %c%c%c\n",
           (f.st_mode & S_IRUSR) ? 'r' : '-',
           (f.st_mode & S_IWUSR) ? 'w' : '-',
           (f.st_mode & S_IXUSR) ? 'x' : '-');

    printf("Group: %c%c%c\n",
           (f.st_mode & S_IRGRP) ? 'r' : '-',
           (f.st_mode & S_IWGRP) ? 'w' : '-',
           (f.st_mode & S_IXGRP) ? 'x' : '-');

    printf("Others: %c%c%c\n",
           (f.st_mode & S_IROTH) ? 'r' : '-',
           (f.st_mode & S_IWOTH) ? 'w' : '-',
           (f.st_mode & S_IXOTH) ? 'x' : '-');

    return 0;
}
