/* fifo_paging.c */
#include <stdio.h>
#include <stdlib.h>

int main(){
    int nframes;
    printf("Enter number of frames: "); scanf("%d",&nframes);
    int ref[] = {1,2,3,4,1,2,5,1,2,3,4,5};
    int refs = sizeof(ref)/sizeof(ref[0]);
    int frames[50], front=0, count=0, i, j;
    for(i=0;i<nframes;i++) frames[i]=-1;
    int faults=0;
    for(i=0;i<refs;i++){
        int found=0;
        for(j=0;j<nframes;j++) if(frames[j]==ref[i]) {found=1; break;}
        if(!found){
            frames[front] = ref[i];
            front = (front+1)%nframes;
            faults++;
        }
        printf("Ref %d -> Frames: ", ref[i]);
        for(j=0;j<nframes;j++) printf("%d ", frames[j]);
        printf("\n");
    }
    printf("Total Page Faults = %d\n", faults);
    return 0;
}
