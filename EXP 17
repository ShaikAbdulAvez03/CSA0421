#include <stdio.h>
#include <stdlib.h>

int main() {
    int n, head, seek = 0;
    int req[50];

    printf("Enter number of disk requests: ");
    scanf("%d", &n);

    printf("Enter disk request sequence:\n");
    for(int i = 0; i < n; i++)
        scanf("%d", &req[i]);

    printf("Enter initial head position: ");
    scanf("%d", &head);

    printf("\nDisk Head Movement\n");
    for(int i = 0; i < n; i++) {
        printf("%d -> %d\n", head, req[i]);
        seek += abs(req[i] - head);
        head = req[i];
    }

    printf("\nTotal Seek Time = %d\n", seek);
    printf("Average Seek Time = %.2f\n", (float)seek / n);

    return 0;
}
