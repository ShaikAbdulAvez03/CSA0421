/* fcfs_disk.c */
#include <stdio.h>
#include <stdlib.h>

int main(){
    int n, head;
    printf("Enter number of requests: "); scanf("%d",&n);
    int *req = malloc(n*sizeof(int));
    printf("Enter requests: ");
    for(int i=0;i<n;i++) scanf("%d",&req[i]);
    printf("Initial head: "); scanf("%d",&head);
    int seek=0;
    printf("Head movements:\n");
    for(int i=0;i<n;i++){
        printf("%d -> %d\n", head, req[i]);
        seek += abs(req[i]-head);
        head = req[i];
    }
    printf("Total seek = %d\n", seek);
    free(req);
    return 0;
}
